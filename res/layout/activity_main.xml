<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="11"
    android:useDefaultMargins="true"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/ageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_row="0"
        android:text="@string/Age"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/amountEditTextAge"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:digits="0123456789"
        android:inputType="numberDecimal"
        android:maxLength="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/amountDisplayTextViewAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:background="@android:color/holo_blue_bright"
        android:padding="@dimen/textview_padding"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_row="1"
        android:text="@string/max_heart_rate"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/amountTextViewMaxHR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:background="@android:color/holo_orange_light"
        android:padding="@dimen/textview_padding"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/targetHRLow"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/amountDisplayTextViewTargetLow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:background="@android:color/holo_orange_light"
        android:padding="@dimen/textview_padding"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/yearTextView02"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_row="8"
        android:text="@string/targetHRHight"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Space />

    <Space
        android:layout_width="100dp"
        android:layout_height="292dp"
        android:layout_row="5" />

    <Space
        android:layout_width="100dp"
        android:layout_row="6" />

    <Space
        android:layout_width="100dp"
        android:layout_row="6" />

    <Space
        android:layout_width="100dp"
        android:layout_row="6" />

    <Space
        android:layout_width="100dp"
        android:layout_height="235dp"
        android:layout_row="6" />

    <Space
        android:layout_width="100dp"
        android:layout_height="4dp"
        android:layout_row="6" />

    <Space
        android:layout_width="100dp"
        android:layout_height="527dp"
        android:layout_row="6" />

    <Space
        android:layout_width="100dp"
        android:layout_row="6" />

    <Space
        android:layout_width="100dp"
        android:layout_row="6" />

    <TextView
        android:id="@+id/amountDisplayTextViewTargetHigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="8"
        android:background="@android:color/holo_orange_light"
        android:padding="@dimen/textview_padding"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</GridLayout>